<p id="notice"><%= notice %></p>

<h1>Listing Archives</h1>

<% unless user_signed_in? %> 
   <h1>Welcome to ShareBox</h1> 
   <p>File sharing web application you can't ignore.</p> 
     
<% else %> 
  <div id="menu"> 
       <ul id= "top_menu">     
           <li><%= link_to "Upload", new_archive_path %></li> 
       </ul> 
    </div> 
   <div class="archive_list_header"> 
       <div class="file_name_header">File Name</div> 
       <div class="file_size_header">Size</div> 
       <div class="file_last_updated_header">Modified</div> 
   </div> 
   <div class="asset_list"> 
       <% @archives.each do |archive| %> 
           <div class="archive_details"> 
               <!--<div class="file_name"><%= #link_to archive.uploaded_file_file_name, download_url(archive) %></div> -->
               
               <div class="file_name"> <%= link_to "Show", archive %></div>
               <div class="file_size"><%= number_to_human_size(archive.uploaded_file_file_size, :precision => 2) %></div> 
               <div class="file_last_updated"><%= archive.uploaded_file_updated_at %></div> 
           </div> 
       <% end %> 
   </div> 
<% end %>

<br>
