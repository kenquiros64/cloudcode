<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default nav-text-color" role="navigation">
      <div class="container-fluid">
				<div class="navbar-header">
				  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				  </button>
				  <a id="nav-ico-a" href="/"></a>
				</div>
				<div class="collapse navbar-collapse">
				  <ul class="nav navbar-nav">
				  	<li><h3 style="padding-top:0px;margin-top:12px">© CloudCode</h3></li>
				  	<li><a class="navbar-brand" id="navbar-brand-left" href="/">
				  	<% if user_signed_in? %>
				    	My Projects
				 	<% else %>
				 		All Public Projects
				 	<% end %>
				 	</a></li>
				 	<% if user_signed_in? %>
				 		<li><a class="navbar-brand" id="navbar-brand-left" href="/home/public">
					  		All Public Projects
					 	</a></li>
				 	<% end %>
				  </ul>
				  <div class="pull-right">
    				    <% if user_signed_in? %>
    				      Logged in as <strong><%= current_user.email %></strong>.
    				      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-default btn-sm navbar-btn' %> 
    				      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-default btn-sm navbar-btn' %>
    				    <% else %>
    				      Not Signed in.
    				      <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-default btn-sm navbar-btn'  %> 
    				      <%= link_to "Login", new_user_session_path, :class => 'btn btn-default btn-sm navbar-btn' %>
    				    <% end %>
			      </div>
      </div>
    </nav>

    <div class="container">

    	<%= flash_messages %>
    	
        <%= yield %>
    
    </div>

</body>

